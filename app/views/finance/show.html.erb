<h4><%= @shop.name %></h4>
<div class='row'>
  <div class='col-md-2'>Tipo</div>
  <div class='col-md-2'>Valor</div>
  <div class='col-md-2'>cartao</div>
  <div class='col-md-2'>cpf</div>
  <div class='col-md-2'>horario</div>
<hr>
</div>
<% @finances.each do |finance| %>
  <div class='row'>
    <div class='col-md-2'><%= finance.operation %></div>
    <div class='col-md-2'><%= finance.value %></div>
    <div class='col-md-2'><%= finance.card %></div>
    <div class='col-md-2'><%= finance.cpf %></div>
    <div class='col-md-2'><%= finance.datetime %></div>
  </div>
<% end %>
<br>
<div class='row'>
  Saldo final da operacao: <%= @total %>
</div>